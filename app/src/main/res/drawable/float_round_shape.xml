<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/v5_white" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"/>
            <stroke android:width="1dp" android:color="#0099CC"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/v5_transparent_gray" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"/>
            <stroke android:width="1dp" android:color="#0099CC"/>
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <solid android:color="@color/float_unable_bg" />
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"
                android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"/>
            <stroke android:width="1dp" android:color="@color/float_unable_bg"/>
        </shape>
    </item>
</selector>