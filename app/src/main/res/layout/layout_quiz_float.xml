<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="185dp"
    android:layout_height="40dp"
    android:background="@drawable/float_round_shape">

    <RelativeLayout
        android:id="@+id/layout_text"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:paddingLeft="22dp"
        android:paddingRight="12dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/right_round_shape">

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_alignParentTop="true"
            android:text="直播答题"/>

        <TextView
            android:id="@+id/tv_quiz_answer"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:textSize="13sp"
            android:textColor="@color/answer_color"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_alignParentBottom="true"
            android:text="小五给您推荐答案"/>

        <TextView
            android:id="@+id/tv_unable_tip"
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/v5_white"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_centerInParent="true"
            android:text="@string/float_unable_tip"/>

    </RelativeLayout>

    <com.chyrain.quizassistant.view.CircleImageView
        android:id="@+id/iv_circle_app"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:border_width="0dp"
        android:src="@mipmap/settings_ic_cddh"/>

</RelativeLayout>
